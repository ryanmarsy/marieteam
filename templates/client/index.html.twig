{% extends 'base.html.twig' %}

{% block title %}client index{% endblock %}

{% block body %}
    <h1>client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdClient</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>CodePostal</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.idclient }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.codePostal }}</td>
                <td>{{ client.password }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'idclient': client.idClient}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'idclient': client.idClient}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
