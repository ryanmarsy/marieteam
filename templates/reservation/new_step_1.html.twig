{% extends 'base.html.twig' %}

{% block title %}
  Nouvelle réservation -Etape 1
{% endblock %}

{% block content %}
  <div class="container text-center">
    <h1>Nouvelle réservation</h1>
    {{ form_start(form) }}
    <div class="container text-center">
      <div class="row">
        <div class="col">{{ form_row(form.liaison) }}</div>
        <div class="col">{{ form_row(form.date) }}</div>
        <div class="col">
          {% for child in form %}
            {% if child.vars.name not in ['submit', 'liaison', 'date'] %}
              {{ form_row(child) }}
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
